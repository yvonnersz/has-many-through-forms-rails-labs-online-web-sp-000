
<%= form_for @post do |f| %>

  <%= f.label :title %>
  <%= f.text_field :title %>

  <%= f.label :content %>
  <%= f.text_field :content %>

  <%= f.collection_check_boxes :category_ids, Category.all, :id, :name %>

  <%= f.fields_for :categories, @post.categories.build do |categories_field| %>
    <%= categories_field.text_field :name %>
  <% end %>

  <%= f.submit %>

<% end %>
